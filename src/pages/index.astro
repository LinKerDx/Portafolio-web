---
import Layout from "@/layouts/Layout.astro";

import Badge from "@/components/Badge.astro";
import SectionContainer from "@/components/SectionContainer.astro";
import SocialPill from "@/components/SocialPill.astro";
import Projects from "@/components/Projects.astro";
import Experience from "@/components/Experience.astro";
import LinkedInIcon from "@/components/Icons/LinkedInIcon.astro";
import GithubIcon from "@/components/Icons/GithubIcon.astro";
import MailIcon from "@/components/Icons/MailIcon.astro";
import CodeIcon from "@/components/Icons/CodeIcon.astro";
import ProfileCheck from "@/components/Icons/ProfileCheck.astro";
import BriefIcon from "@/components/Icons/BriefIcon.astro";
import AboutMe from "@/components/AboutMe.astro";
---

<Layout
  title="Portafolio de Omar - Desarrollador y Programador Web "
  description="Contratame para desarrollar tu proyecto web, desde cero."
>
  <main>
    <div class="relative w-full h-[100px] md:h-[400px]">
      <img
        src="/luna.webp"
        alt="luna generada con IA"
        class="z-10 size-[100px] md:size-[150px] animate-luna absolute object-cover"
      />
      <img
        src="/CometasSimple.webp"
        alt="Cometa png"
        class="z-10 absolute object-cover size-[20px] md:size-[50px] right-0 animate-CometaX animate-CometaY"
      />
      <img
        src="/galaxia.webp"
        alt="milky way"
        class="absolute h-[380px] md:h-[680px] w-full object-cover z-"
      />
      <img
        src="/galaxiaR.webp"
        alt="galaxia espiral"
        class="absolute opacity-50 h-[45px] w-[45px] md:h-[150px] md:w-[150px] left-20 top-40 animate-spin"
      />
    </div>
    <SectionContainer class="px-4 relative py-16 md:py-36">
      <img
        class="z-10 transition hover:animate-swing rounded-full size-[100px] md:size-[150px]"
        src="/Profile.webp"
        alt="LinKDx avatar"
      />

      <h1
        class="z-10 text-white text-5xl flex flex-col md:flex-row items-center gap-4 pb-10"
      >
        <a
          href="https://www.linkedin.com/in/linkdx/"
          target="_blank"
          rel="noopener"
          class="flex justify-center items-center"><Badge>Disponible</Badge></a
        >
        Hola, soy LinKDx
      </h1>
      <h2 class="z-10 text-white text-2xl text-pretty ml-3">
        <span class="z-10 text-yellow-200/90">
          Desarrollador web desde cero.</span
        >
        <span class="z-10text-red-200/90">De Nuevo León, Mexico.</span>
        <span
          >Me especializo en solucionar problemas. Streamer y Gamer en mis
          tiempos libres.</span
        >
      </h2>

      <nav class="z-10 flex flex-col md:flex-row gap-2">
        <SocialPill href="https://www.linkedin.com/in/linkdx/">
          <LinkedInIcon class="size-5" />LinkedIn</SocialPill
        >
        <SocialPill href="https://github.com/LinKerDx">
          <GithubIcon class="size-5" />Github</SocialPill
        >
        <SocialPill href="mailto:omar_link@hotmail.com"
          ><MailIcon class="size-7" />omar_link@hotmail.com</SocialPill
        >
      </nav>

      <span class="BOTONES VIEW AND SHOW MY CV">
        <a
          class="inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 [&_svg]:pointer-events-none [&_svg]:size-4 [&_svg]:shrink-0 bg-primary shadow-innerGlow text-primary-foreground hover:bg-primary/90 transition-all duration-300 hover:ring-2 hover:ring-primary hover:ring-offset-2 h-11 rounded-md px-8 group overflow-hidden"
          href="https://drive.google.com/file/d/1Ty_ciSZqzziZBNA580YQ6TtSsBdUf-4T/view?usp=drive_link"
          target="_blank"
        >
          <div
            class="translate-y-0 overflow-hidden flex flex-row gap-2 items-center opacity-100 transition group-hover:-translate-y-[150%] group-hover:opacity-0"
          >
            <svg
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="currentColor"
              xmlns="http://www.w3.org/2000/svg"
              ><path
                d="M21.09 6.98002C20.24 6.04002 18.82 5.57002 16.76 5.57002H16.52V5.53002C16.52 3.85002 16.52 1.77002 12.76 1.77002H11.24C7.48004 1.77002 7.48004 3.86002 7.48004 5.53002V5.58002H7.24004C5.17004 5.58002 3.76004 6.05002 2.91004 6.99002C1.92004 8.09002 1.95004 9.57002 2.05004 10.58L2.06004 10.65L2.16004 11.7C2.17004 11.71 2.19004 11.73 2.21004 11.74C2.54004 11.96 2.88004 12.18 3.24004 12.38C3.38004 12.47 3.53004 12.55 3.68004 12.63C5.39004 13.57 7.27004 14.2 9.18004 14.51C9.27004 15.45 9.68004 16.55 11.87 16.55C14.06 16.55 14.49 15.46 14.56 14.49C16.6 14.16 18.57 13.45 20.35 12.41C20.41 12.38 20.45 12.35 20.5 12.32C20.96 12.06 21.39 11.78 21.81 11.47C21.83 11.46 21.85 11.44 21.86 11.42L21.9 11.06L21.95 10.59C21.96 10.53 21.96 10.48 21.97 10.41C22.05 9.40002 22.03 8.02002 21.09 6.98002ZM13.09 13.83C13.09 14.89 13.09 15.05 11.86 15.05C10.63 15.05 10.63 14.86 10.63 13.84V12.58H13.09V13.83ZM8.91004 5.57002V5.53002C8.91004 3.83002 8.91004 3.20002 11.24 3.20002H12.76C15.09 3.20002 15.09 3.84002 15.09 5.53002V5.58002H8.91004V5.57002Z"
                fill="currentColor"></path><path
                opacity="0.4"
                d="M20.5002 12.2999C20.4502 12.3299 20.4002 12.3599 20.3502 12.3899C18.5702 13.4299 16.6002 14.1299 14.5602 14.4699C14.4802 15.4299 14.0602 16.5299 11.8702 16.5299C9.68016 16.5299 9.26016 15.4399 9.18016 14.4899C7.27016 14.1899 5.39016 13.5599 3.68016 12.6099C3.53016 12.5299 3.38016 12.4499 3.24016 12.3599C2.88016 12.1599 2.54016 11.9399 2.21016 11.7199C2.19016 11.7099 2.17016 11.6899 2.16016 11.6799L2.77016 18.1899C2.98016 20.1799 3.80016 22.2299 8.20016 22.2299H15.8202C20.2202 22.2299 21.0402 20.1799 21.2502 18.1799L21.8802 11.3999C21.8702 11.4199 21.8502 11.4399 21.8302 11.4499C21.4002 11.7599 20.9602 12.0499 20.5002 12.2999Z"
                fill="currentColor"></path></svg
            >Descargar CV
          </div>
          <div
            class="absolute translate-y-[150%] opacity-0 transition group-hover:translate-y-0 group-hover:opacity-100"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="lucide lucide-arrow-down"
              ><path d="M12 5v14"></path><path d="m19 12-7 7-7-7"></path></svg
            >
          </div></a
        >
      </span>
    </SectionContainer>
    <SectionContainer id="proyectos">
      <div class="px-4 flex flex-col items-center">
        <h2
          class="text-5xl font-semibold text-[#AD9EAA] flex items-center gap-4 pb-10"
        >
          <CodeIcon class="size-7" />Proyectos
        </h2>
        <Projects />
      </div>
    </SectionContainer>
    <SectionContainer id="experiencia">
      <div class="px-4">
        <h2
          class="text-5xl font-semibold text-[#AD9EAA] flex items-center gap-4 pb-10"
        >
          <BriefIcon class="size-7" />Experiencia Laboral
        </h2>
        <Experience />
      </div>
    </SectionContainer>

    <SectionContainer class="px-4" id="sobre-mí">
      <div class="px-4 flex flex-col items-center">
        <h2
          class="text-5xl font-semibold text-[#AD9EAA] flex items-center gap-4 pb-10"
        >
          <ProfileCheck class="size-7" />Sobre mí...
        </h2>
        <AboutMe />
      </div>
    </SectionContainer>
  </main>
</Layout>
